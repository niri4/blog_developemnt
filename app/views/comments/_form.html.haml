= form_with(model: [ @blog, @blog.comments.build ], local: true) do |form|
  - if @comment.try(:errors).try(:any?)
    #error_explanation
      %h2
        = pluralize(@comment.errors.count, "error")
        prohibited this blog from being saved:
      %ul
        - @comment.errors.full_messages.each do |message|
          %li= message

  = form.hidden_field :parent_id, value: parent_id
  %p
    = form.label :commenter
    %br/
    = form.text_field :commenter
  %p
    = form.label :body
    %br/
    = form.text_area :body
  %p
    = form.submit
